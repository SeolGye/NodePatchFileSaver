<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/post.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (pos.length > 0) { %>
            <div class="grid">
                <% for (let post of pos) { %>
                    <article class="card post-item">
                        <header class="card__header">
                            <h1 class="post__title"><%= post.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= post.imageUrl %>">
                        </div>
                        <div class="card__content">
                            <p class="post__truncate"><%= post.description %></p>
                        </div>
                        <div class="card__content">
                            <h4 class="post__userId"><%= post.userId %></h4>
                            <h4 class="post__createdat"><%= post.created_at.toLocaleString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit' }) %></h4>
                        </div>
                        <div class="card__actions">
                            <a href="/posts/<%= post._id %>" class="btn">Details</a>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Posts Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>